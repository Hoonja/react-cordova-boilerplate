<?xml version='1.0' encoding='utf-8'?>
<widget id="com.danbiedu.wink.parent.ios" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <hook src="hooks/build.sh" type="before_prepare" />
    <name>윙크 영상통화</name>
    <description>
        윙크 영상통화
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        DanbiEduCorp.
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="180" src="src/resource/ios/Icon-60@3x.png" width="180" />
        <icon height="120" src="src/resource/ios/Icon-60@2x.png" width="120" />
        <icon height="76" src="src/resource/ios/Icon-76.png" width="76" />
        <icon height="152" src="src/resource/ios/Icon-76@2x.png" width="152" />
        <icon height="40" src="src/resource/ios/Icon-40.png" width="40" />
        <icon height="80" src="src/resource/ios/Icon-40@2x.png" width="80" />
        <icon height="57" src="src/resource/ios/Icon.png" width="57" />
        <icon height="114" src="src/resource/ios/Icon@2x.png" width="114" />
        <icon height="72" src="src/resource/ios/Icon-72.png" width="72" />
        <icon height="144" src="src/resource/ios/Icon-72@2x.png" width="144" />
        <icon height="29" src="src/resource/ios/Icon-Small.png" width="29" />
        <icon height="58" src="src/resource/ios/Icon-Small@2x.png" width="58" />
        <icon height="50" src="src/resource/ios/Icon-Small-50.png" width="50" />
        <icon height="100" src="src/resource/ios/Icon-Small-50@2x.png" width="100" />
        <hook src="hooks/iosrtc-swift-support.js" type="after_platform_add" />
        <config-file parent="NSCameraUsageDescription" target="*-Info.plist">
            <string>Blink uses your camera to make video calls.</string>
        </config-file>
        <config-file parent="NSContactsUsageDescription" target="*-Info.plist">
            <string>Blink needs access to your contacts in order to be able to call them.</string>
        </config-file>
        <config-file parent="NSMicrophoneUsageDescription" target="*-Info.plist">
            <string>Blink uses your microphone to make calls.</string>
        </config-file>
        <preference name="Orientation" value="portrait" />
    </platform>
    <plugin name="cordova-plugin-android-permissions" spec="^1.0.0" />
    <plugin name="onesignal-cordova-plugin" spec="^2.3.3" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-vibration" spec="~3.0.1" />
    <plugin name="cordova-plugin-app-version" spec="~0.1.9" />
    <plugin name="cordova-plugin-iosrtc" spec="^4.0.2" />
    <engine name="android" spec="^7.0.0" />
    <engine name="ios" spec="^4.5.4" />
</widget>
